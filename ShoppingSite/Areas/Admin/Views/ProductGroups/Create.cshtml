@using System.Web.UI.WebControls
@model ViewModel.AddProductGroupsViewModel


@using (Ajax.BeginForm("Create","ProductGroups", FormMethod.Post, new AjaxOptions()
{
    OnSuccess = "success",
    UpdateTargetId = "listGroup"
})) 
{
    @Html.AntiForgeryToken() 
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.GroupTitle, new { htmlAttributes = new { @class = "form-control",PlaceHolder = "عنوان گروه" } })
                @Html.ValidationMessageFor(model => model.GroupTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت گروه" class="btn btn-primary"/>
            </div>
        </div>
    </div>
}

 
