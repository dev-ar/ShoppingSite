@using Domain
@model Domain.ProductFeatures

@{
    ViewBag.Title = "ProductFeatures";
}

<h2>ویژگی محصول</h2>
<br/>
@using (Html.BeginForm())
{
    <div class="row">
        @Html.AntiForgeryToken()

        <div class="form-horizontal col-md-4">
        
            <div class="form-group">
                @Html.LabelFor(model => model.FeatureId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("FeatureId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FeatureId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="width: 100%" type="submit" value="ثبت" class="btn btn-success" />
                </div>
            </div>
        </div>

        @{
            List<ProductFeatures> features = ViewBag.Features;
        }

        <div class="col-md-8">
            <table class="table">
                <tr>
                    <th>ويژگی</th>
                    <th>مقدار</th>
                    <th></th>
                </tr>
                @foreach (var item in features)
                {
                    <tr>
                        <td>
                            @item.Features.FeatureTitle
                        </td>
                        <td>
                            @item.Value
                        </td>
                        <td>
                            <a class="btn btn-danger" href="/Admin/Products/Gallery/Delete/@item.ProductFeatureId">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
}

