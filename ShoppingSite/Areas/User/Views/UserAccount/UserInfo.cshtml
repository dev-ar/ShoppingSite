@model Domain.Users
@{ ViewBag.Title = "UserInfo"; }


<div class="col-md-9 col-sm-8 left-side-content internal-style">
    <header><span style="font-size: 20px">اطلاعات کاربری</span></header>
    <hr/>
            <article>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">نام و نام خانوادگی</div>
                        <div class="panel-body">
                            @Model.UserName
                            <a class=" pull-left" href=""><i class="fa fa-edit"></i></a>
                            
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">ایمیل</div>
                        <div class="panel-body">
                            @Model.Email
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </article>
    </div>

