@model IEnumerable<ViewModel.ShowOrderViewModel>


@if (ViewBag.NoProduct == true)
{
    <div style="margin-right: 20px; margin-bottom: 20%" class="alert alert-warning">
        <span> هیچ محصولی در سبد خرید شما یافت نشد.</span>
    </div>
}
else
{
    <div class="container baskets-style margin-top-20" id="FaFont">

        <div class="row basket-style">
            <section class="border-radius">
                <div class="tbl-head">
                    <ul>
                        <li> شرح محصول </li>
                        <li> تعداد و وزن </li>
                        <li> قیمت واحد </li>
                        <li> قیمت کل </li>
                    </ul>
                </div>
                <div class="hidden-head">
                    سبد خرید شما
                </div>
                <div class="tbl-body">
                    <!-- Each Row -->
                    @foreach (var item in Model)
                    {
                        <ul>
                            <li>
                                <a href="" class="product-image"><img class="border-radius" src="/Images/ProductImages/@item.ImageName"></a>
                                <div class="product-info-left-side">
                                    <a href="" class="product-title">
                                        <h3> @item.Title </h3>
                                    </a>
                                </div>
                            </li>
                            <li>
                                <p>
                                    <input type="number" name="points" min="1" max="30" step="1" value="@item.Count" onchange="Commands(@item.ProductId, $(this).val())">
                                </p>
                            </li>
                            <li>
                                <label class="lbl-hidden"> قیمت واحد : </label> <span class="lbl-price"> @item.Price.ToString("#,0 تومان") </span>
                            </li>
                            <li>
                                <label class="lbl-hidden"> قیمت کل : </label> <span class="lbl-price"> @item.Sum.ToString("#,0 تومان") </span>

                                <a style="cursor: pointer" onclick="Commands(@item.ProductId, 0)"><i class="delete-button">X</i></a>
                            </li>
                        </ul>
                    }

                    <!-- End Each Row -->

                </div>



                <div class="tbl-footer">
                    <ul>
                        <li> قیمت کل : <span> @Model.Sum(s => s.Sum).ToString("#,0 تومان")</span></li>
                        <li class="total-price"> مبلغ قابل پرداخت : <span> @Model.Sum(s => s.Sum).ToString("#,0 تومان") </span></li>
                    </ul>
                </div>
                <a href="/Shipping" class="border-radius submit-basket-button btn btn-success">
                    تأیید و ادامه
                </a>
                <div class="clearfix"></div>
            </section>
        </div>

    </div>
}