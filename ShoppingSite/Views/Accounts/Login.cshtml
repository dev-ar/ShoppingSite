@using System.Web.UI.WebControls
@model Data.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="col-md-9 col-sm-8 left-side-content internal-style">

    <section class="border-radius">
        <header><h3> ورود به سایت </h3></header>
        <article>
            <div class="col-md-10 col-sm-10 col-xs-12">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "نام کاربری/ایمیل" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "رمز عبور" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <p><a href=""><i class="fa fa-lock"></i>رمز عبور خود را فراموش کرده ام !</a></p>
                    <p><a href="/Register"><i class="fa fa-user-plus"></i>ثبت نام کنید!</a></p>
                    <label><input type="checkbox"> مرا بخاطر بسپار! </label>
                    <input style="background-color: dodgerblue;" type="submit" value=" ورود به سایت">

                }

            </div>
            <div class="clearfix"></div>
        </article>
    </section>

</div>
<div class="clearfix"></div>
